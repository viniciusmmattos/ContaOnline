@model IEnumerable<ContaOnline.Domain.Models.ContaCategoria>

@{
    ViewBag.Title = "Inicio";
}

<h2>Categorias de Contas</h2>

<p>
    <a href='@Url.Action("Incluir")'><span class="glyphicon glyphicon-plus-sign"></span> Nova Categoria</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td class="comandos-tabela">
                <a href='@Url.Action("Alterar", new { Id=item.Id})'><span class="glyphicon glyphicon-edit"></span></a>
                <a href='@Url.Action("Excluir", new { Id=item.Id})'><span class="glyphicon glyphicon-remove"></span></a>
            </td>
        </tr>
    }

</table>
