@model ContaOnline.Domain.Models.ContaViewModel
@using ContaOnline.Domain.Models

@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dados da Conta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.ContaInstancia.Id)

        <!-- ContaCorrente -->
        <div class="form-group">
            @Html.LabelFor(m => m.ContaInstancia.ContaCorrenteId, "Conta Corrente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ContaInstancia.ContaCorrenteId, new SelectList(Model.ContaCorrenteList, "Id", "Descricao", Model.ContaInstancia.ContaCorrenteId), new { @class = "form-control" })
            </div>
        </div>

        <!-- Tipo -->
        <div class="form-group">
            <label class="control-label col-md-2">Tipo</label>
            <div class="col-md-10">
                <select id="ContaInstancia_Tipo" name="ContaInstancia.Tipo" class="form-control" style="width: 120px">
                    <option value="1" @if (Model.ContaInstancia.Tipo == PagarReceber.Pagar) { Html.Raw(" selected "); }>Pagar</option>
                    <option value="2" @if (Model.ContaInstancia.Tipo == PagarReceber.Receber) { Html.Raw(" selected "); }>Receber</option>
                </select>
            </div>
        </div>

        <!-- ContaCategoria -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.CategoriaId, "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => Model.ContaInstancia.CategoriaId, new SelectList(Model.ContaCategoriaList, "Id", "Nome", Model.ContaInstancia.CategoriaId), new { @class = "form-control" })
            </div>
        </div>

        <!-- Contato -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.ContatoId, "Contato", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => Model.ContaInstancia.ContatoId, new SelectList(Model.ContatoList, "Id", "Nome", Model.ContaInstancia.ContatoId), new { @class = "form-control" })
            </div>
        </div>

        <!-- Data Vencimento -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.DataVencimento, "Data de Vencimento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => Model.ContaInstancia.DataVencimento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>
        </div>

        <!-- Descricao -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.Descricao, "Descrição", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContaInstancia.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <!-- Valor -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.Valor, "Valor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => Model.ContaInstancia.Valor, new { htmlAttributes = new { @class = "form-control", style = "width:100px;text-align:right" } })
            </div>
        </div>

        <hr />

        <!-- Data Pagamento -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.DataPagamento, "Data de Pagamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => Model.ContaInstancia.DataPagamento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>
        </div>

        <!-- Acrescimo -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.Acrescimo, "Acrescimo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => Model.ContaInstancia.Acrescimo, new { htmlAttributes = new { @class = "form-control", style = "width:100px;text-align:right" } })
            </div>
        </div>

        <!-- Desconto -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.Desconto, "Desconto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => Model.ContaInstancia.Desconto, new { htmlAttributes = new { @class = "form-control", style = "width:100px;text-align:right" } })
            </div>
        </div>

        <!-- Valor Pago -->
        <div class="form-group">
            @Html.LabelFor(model => model.ContaInstancia.ValorPago, "Valor Pago", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => Model.ContaInstancia.ValorPago, new { htmlAttributes = new { @class = "form-control", style = "width:100px;text-align:right" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Alterar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Inicio")
</div>

