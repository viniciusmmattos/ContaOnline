@model ContaOnline.Domain.Models.ContaExibirViewModel

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

<h4>Confirma a exclusão desse registro?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataVencimento)
        </dt>

        <dd>
            @Model.DataVencimento.ToString("d")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>
        
        @if (Model.DataPagamento != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.DataPagamento)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataPagamento)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Desconto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Desconto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Acrescimo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Acrescimo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ValorPago)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ValorPago)
            </dd>
        }
        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContaCorrenteDescricao)
        </dd>

        <dt>
            Categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>

        <dt>
            Contato
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContatoNome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a href='@Url.Action("Inicio")' class="btn btn-default"> Voltar</a>
        </div>
    }
</div>
